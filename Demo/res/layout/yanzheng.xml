<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout   xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shuye2"
    android:orientation="vertical">
    <LinearLayout 
        android:id="@+id/p_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        >
        <TextView 
             android:text="@string/mobilephone"
             android:textColor="#000000"
             android:textSize="16sp"
             android:layout_marginLeft="3dp"
             android:gravity="center_horizontal"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:background="#00ffffff"/>
        <EditText 
             android:id="@+id/p_number"
             android:layout_width="150dp"
             android:layout_height="wrap_content"
             android:layout_marginLeft="8dp"
             android:background="#00ffffff"
             android:hint="请输入手机号"
             android:inputType="phone"
             android:textSize="15sp"
             android:paddingTop="7dp"
             android:paddingBottom="7dp"/>
        <View   
             android:layout_width="1dp"
             android:layout_height="match_parent"
             android:background="#8B8B83"
             android:layout_marginLeft="3dp"/>
        <Button 
            android:id="@+id/btn_yzm"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:gravity="center_horizontal"
            android:text="@string/getyanzheng"
            android:textColor="#FFFFFF"
            />
        <View 
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#8B8B83"
            android:layout_marginLeft="3dp"/>

    </LinearLayout>
    
    <View 
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#8B8B83"
        android:layout_below="@id/p_layout"
        android:layout_marginTop="3dp"
        />
    
    <LinearLayout 
        android:id="@+id/yz_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:orientation="horizontal"
        >
        <TextView 
            android:text="@string/yanzheng"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00ffffff"
            />
        <EditText 
             android:id="@+id/yz_number"
             android:layout_width="150dp"
             android:layout_height="wrap_content"
             android:layout_marginLeft="8dp"
             android:background="#00ffffff"
             android:hint="请输验证码"
             android:inputType="number"
             android:textSize="15sp"
             android:paddingTop="7dp"
             android:paddingBottom="7dp"
            />
    </LinearLayout>
    
    <View 
        android:id="@+id/line"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#8B8B83"
        android:layout_below="@id/yz_layout"
        android:layout_marginTop="3dp"
        />
    
    <Button 
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="下一步"
        android:textSize="25sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/shape"
        />
   
        
  
</LinearLayout>