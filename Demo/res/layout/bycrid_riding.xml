<?xml version="1.0" encoding="utf-8"?>
 <!-- <2014/02/25-Task_34211-ZhiweiWang,[HealthyLiving][BycicleRide] BycicleRide app UI Modify. -->
 <!-- //<2014/03/06-Task_34540-xiangrongji, [AAP1302][BycicleRiding]update altitude & Viewer options & Viewer & Riding & history & function of delete -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/riding_bg">
    
    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    android:gravity="center_horizontal">
	
	    <RelativeLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/riding_titlebar">
	        <ImageView 
	            android:id="@+id/bycrid_riding_head_img"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="5dp"
	            android:background="@drawable/riding_titlebar_icon"
	            android:layout_centerVertical="true" />
	        <LinearLayout 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:orientation="vertical"
	            android:layout_marginRight="5dp"
	            android:layout_centerVertical="true"
	            android:layout_alignParentRight="true">
	            <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="right"
		            android:text="@string/bycrid_ridng_title"
		            android:textSize="22sp"
		            android:textColor="@color/bycicle_textColor"/>
		        <TextView
		            android:id="@+id/bycrid_riding_curr_time"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="right"
		            android:textSize="18sp"
		            android:textColor="@color/bycicle_textColor"/>
	        </LinearLayout>
	    </RelativeLayout>

	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:paddingLeft="8dp"
	        android:paddingRight="8dp"
	        android:paddingTop="12dp"
	        android:paddingBottom="8dp">
		    <LinearLayout 
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical" >
		      	<LinearLayout 
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal" >
					<LinearLayout
			            android:layout_width="0dp"
			            android:layout_height="match_parent"
			            android:layout_weight="1"
			            android:layout_marginRight="6dp"
			            android:orientation="vertical"
			            android:background="@drawable/riding_item_bg" 
			            android:paddingRight="4.5dp"
			            android:paddingBottom="6dp">
		            	<LinearLayout 
			                android:layout_width="match_parent"
				            android:layout_height="30dp">
			                <TextView 
					            android:layout_width="wrap_content"
					            android:layout_height="wrap_content"
					            android:layout_gravity="left|center_vertical"
					            android:layout_marginLeft="8dp"
					            android:text="@string/bycrid_item_distance"
					            android:textSize="22sp"
					            android:textColor="@color/bycicle_textColorBlack"/>
		            	</LinearLayout>
			        
				        <LinearLayout 
				            android:layout_width="match_parent"
				            android:layout_height="match_parent"
				            android:gravity="center">
			                <LinearLayout 
			                    android:layout_width="wrap_content"
			                    android:layout_height="40dp"
			                    android:orientation="horizontal"
			                    android:gravity="bottom">
						        <TextView
				            android:id="@+id/bycrid_riding_distance_val"
						            android:layout_width="wrap_content"
						            android:layout_height="wrap_content"
						            android:textSize="32sp"
						            android:textColor="@color/bycicle_textColor" />
						        <TextView
						            android:layout_width="wrap_content"
						            android:layout_height="wrap_content"
						            android:layout_marginLeft="4dp"
						            android:text="@string/bycrid_km"
						            android:textSize="18sp" 
						            android:textColor="@color/bycicle_textColorBlack"/>
			                </LinearLayout>
				        </LinearLayout>
			        </LinearLayout>
		        				
					<LinearLayout
			            android:layout_width="0dp"
			            android:layout_height="match_parent"
			            android:layout_weight="1"
			            android:orientation="vertical" 
			            android:background="@drawable/riding_item_bg"
			            android:paddingRight="4.5dp"
			            android:paddingBottom="6dp">
			            <LinearLayout 
			                android:layout_width="match_parent"
				            android:layout_height="30dp">
			                <TextView 
					            android:layout_width="wrap_content"
					            android:layout_height="wrap_content"
					            android:layout_gravity="left|center_vertical"
					            android:layout_marginLeft="8dp"
					            android:text="@string/bycrid_item_duration"
					            android:textSize="22sp"
					            android:textColor="@color/bycicle_textColorBlack"/>
			            </LinearLayout>
			        
				        <LinearLayout 
				            android:layout_width="match_parent"
				            android:layout_height="match_parent"
				            android:gravity="center">
			                <LinearLayout 
			                    android:layout_width="wrap_content"
			                    android:layout_height="40dp"
			                    android:gravity="bottom">
						        <TextView
				            		android:id="@+id/bycrid_riding_duration_val"
						            android:layout_width="wrap_content"
						            android:layout_height="wrap_content"
						            android:textSize="32sp" 
						            android:textColor="@color/bycicle_textColor"/>
			                </LinearLayout>
				        </LinearLayout>
			        </LinearLayout>
		        </LinearLayout>
		        
		      <LinearLayout
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:orientation="horizontal"
		            android:layout_marginTop="10dp">
				<LinearLayout
		            android:layout_width="0dp"
		            android:layout_height="match_parent"
		            android:layout_weight="1" 
		            android:layout_marginRight="6dp"
		            android:orientation="vertical"
		            android:background="@drawable/riding_item_bg"
		            android:paddingRight="4.5dp"
		            android:paddingBottom="6dp">
		            <LinearLayout 
		                android:layout_width="match_parent"
			            android:layout_height="30dp">
		                <TextView 
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:layout_gravity="left|center_vertical"
			            	android:layout_marginLeft="8dp"
				            android:text="@string/bycrid_item_altitude"
				            android:textSize="22sp"
				            android:textColor="@color/bycicle_textColorBlack"/>
		            </LinearLayout>
			        
		            <LinearLayout 
		                android:layout_width="match_parent"
		                android:layout_height="match_parent"
		                android:gravity="center">
		                
		                <LinearLayout 
		                    android:layout_width="wrap_content"
		                    android:layout_height="40dp"
		                    android:orientation="horizontal"
		                    android:gravity="bottom">
		                    
		                        <ImageView 
				            		android:id="@+id/bycrid_riding_altitude_icon"
			                        android:layout_width="wrap_content"
			                        android:layout_height="wrap_content"
			                        android:src="@drawable/up_arrow"/>
			                    <LinearLayout 
			                        android:layout_width="wrap_content"
			                        android:layout_height="wrap_content"
			                        android:layout_marginLeft="6dp"
			                        android:orientation="horizontal"
			                        android:gravity="bottom">
							        <TextView
					            		android:id="@+id/bycrid_riding_altitude_val"
							            android:layout_width="wrap_content"
							            android:layout_height="wrap_content"
					            		android:textSize="32sp" 
							            android:textColor="@color/bycicle_textColor"/>
							        <TextView
							            android:layout_width="wrap_content"
							            android:layout_height="wrap_content"
					            		android:layout_marginLeft="8dp"
							            android:text="@string/bycrid_m"
					            		android:textSize="18sp"
							            android:textColor="@color/bycicle_textColorBlack" />
			                    </LinearLayout>
		                    </LinearLayout>
		            </LinearLayout>
		        </LinearLayout>
		        
				<LinearLayout
		            android:layout_width="0dp"
		            android:layout_height="match_parent"
		            android:layout_weight="1"
		            android:orientation="vertical"
		            android:background="@drawable/riding_item_bg"
		            android:paddingRight="4.5dp"
		            android:paddingBottom="6dp">
		            	<LinearLayout 
			                android:layout_width="match_parent"
				            android:layout_height="30dp">
			                <TextView 
					            android:layout_width="wrap_content"
					            android:layout_height="wrap_content"
					            android:layout_gravity="left|center_vertical"
					            android:layout_marginLeft="8dp"
					            android:text="@string/bycrid_item_velocity"
					            android:textSize="22sp"
					            android:textColor="@color/bycicle_textColorBlack"/>
		            	</LinearLayout>
			        
			            <LinearLayout 
			                android:layout_width="match_parent"
			                android:layout_height="match_parent"
			                android:gravity="center">
					        <LinearLayout 
					            android:layout_width="wrap_content"
					            android:layout_height="40dp"
					            android:orientation="horizontal"
					            android:gravity="bottom">
						        <TextView
				            		android:id="@+id/bycrid_riding_velocity_val"
						            android:layout_width="wrap_content"
						            android:layout_height="wrap_content"
						            android:textSize="32sp" 
						            android:textColor="@color/bycicle_textColor"/>
						        <TextView
						            android:layout_width="wrap_content"
						            android:layout_height="wrap_content"
						            android:layout_marginLeft="4dp"
						            android:text="@string/bycrid_km_per_hour"
						            android:textSize="16sp" 
						            android:textColor="@color/bycicle_textColorBlack"/>
				        	</LinearLayout>
		            	</LinearLayout>
		        	</LinearLayout>
		       	</LinearLayout>	
	        </LinearLayout>
	    </LinearLayout>
	    
        <RelativeLayout 
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_marginLeft="8dp"
	        android:layout_marginRight="8dp"
	        android:layout_marginBottom="14dp"
	        android:padding="5dp"
	        android:background="@drawable/track_viewer_map_bg">
			<ImageView
		        android:id="@+id/bycrid_riding_track"
			    android:layout_width="match_parent"
			    android:layout_height="match_parent">
			</ImageView>
		</RelativeLayout>
    </LinearLayout>

	<SlidingDrawer
        android:id="@+id/bycrid_riding_option_sliding"
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:content="@+id/bycrid_riding_option_sliding_content"
        android:handle="@+id/bycrid_riding_option_sliding_handle"
        android:layout_alignParentBottom="true">
  
	   	<LinearLayout
		    android:id="@+id/bycrid_riding_option_sliding_content"
		    android:layout_width="match_parent"
		    android:layout_height="72dp"
		    android:background="@drawable/riding_popup_bg">	
		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="72dp"
		    android:layout_marginTop="11dp"
		    android:layout_marginBottom="8dp"
		    android:layout_marginLeft="3dp"
		    android:layout_marginRight="3dp"
		    android:orientation="horizontal">	
			<View 
			     android:layout_width="0dp"
			     android:layout_height="match_parent"
			     android:layout_weight="1"/>
		   <Button
		       	android:id="@+id/bycrid_finish"
			    android:layout_width="0dp"
			    android:layout_height="wrap_content"
			    android:layout_weight="3"
			    android:background="@drawable/riding_popup_button_background"
			    android:text="@string/bycrid_finish"
			    android:textColor="@color/bycicle_textColor"/>	
			<View 
			    android:layout_width="0dp"
			    android:layout_height="match_parent"
			    android:layout_weight="1"/>
			<Button
		       	android:id="@+id/bycrid_capture"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="3"
				android:background="@drawable/riding_popup_button_background"
		        android:text="@string/bycrid_capture"
				android:textColor="@color/bycicle_textColor"/>	
		    <View 
		        android:layout_width="0dp"
		        android:layout_height="match_parent"
		    	android:layout_weight="1"/>
			<Button
		       	android:id="@+id/bycrid_zoomout"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="3"
				android:background="@drawable/riding_popup_button_background"
		       	android:text="@string/bycrid_zoomout"
				android:textColor="@color/bycicle_textColor"/>	
		    <View 
		        android:layout_width="0dp"
		        android:layout_height="match_parent"
		    	android:layout_weight="1"/>
			</LinearLayout>
		</LinearLayout>
		
		<RelativeLayout 
		    android:id="@+id/bycrid_riding_option_sliding_handle"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content">
			<ImageView 
				android:id="@+id/bycrid_riding_option_sliding_handle_message_logo"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>	
    	</RelativeLayout>  
	</SlidingDrawer>
</RelativeLayout>
