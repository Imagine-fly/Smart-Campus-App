<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout   xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/shuye2">
    <TextView 
        android:id="@+id/reg_number"
        android:text="@string/inf1"
        android:textSize="13sp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:textColor="#FFD700"
       />
       <View 
           android:id="@+id/inf_layout"
           android:layout_width="fill_parent"
           android:layout_height="1dp"
           android:background="#8B8B83"
           android:layout_below="@id/reg_number"
           android:layout_marginTop="3dp"/>

       <LinearLayout
              android:id="@+id/ph_layout"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_below="@id/inf_layout"
              android:orientation="horizontal"
              android:layout_marginTop="3dp"
           >
           <TextView 
               android:id="@+id/phone"
               android:text="@string/mobilephone"
               android:textColor="#000000"
               android:layout_marginLeft="3dp"
               android:gravity="center_horizontal"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="#00ffffff"/>
            <EditText
               android:id="@+id/p_number"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:layout_marginLeft="8dp"
               android:background="#00ffffff"
               android:hint="请输入手机号"
               android:inputType="phone"
               android:textSize="15sp"
               android:paddingTop="7dp"
               android:paddingBottom="7dp"
              />
             </LinearLayout>
             <View 
               android:layout_width="fill_parent"
               android:layout_height="1dp"
               android:background="#8B8B83"
               android:layout_below="@id/ph_layout"
               android:layout_marginTop="3dp"/>
             <LinearLayout 
              android:id="@+id/k_layout"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_below="@id/ph_layout"
              android:orientation="horizontal"
              android:layout_marginTop="3dp"
           >
                
              <TextView 
               android:id="@+id/key"
               android:text="@string/password"
               android:textColor="#000000"
               android:layout_marginLeft="3dp"
               android:gravity="center_horizontal"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="#00ffffff"
               />
               <EditText
               android:id="@+id/k_number"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:background="#00ffffff"
               android:hint="请输入6~16位密码"
               android:inputType="textPassword"
               android:textSize="15sp"
               android:layout_marginLeft="22dp" 
               android:paddingTop="7dp"
               android:paddingBottom="7dp"/>           
             </LinearLayout>
             <View 
               android:layout_width="fill_parent"
               android:layout_height="1dp"
               android:background="#8B8B83"
               android:layout_below="@id/k_layout"
               android:layout_marginTop="3dp"
                 />
             <LinearLayout 
              android:id="@+id/name_layout"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_below="@id/k_layout"
              android:orientation="horizontal"
              android:layout_marginTop="3dp">
               <TextView 
               android:text="@string/xuehao"
               android:textColor="#000000"
               android:layout_marginLeft="3dp"
               android:gravity="center_horizontal"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="#00ffffff"/>
               <EditText 
               android:id="@+id/x_number"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:background="#00ffffff"
               android:hint="请输入学号"
               android:inputType="text|textPersonName"
               android:textSize="15sp"
               android:layout_marginLeft="22dp" 
               android:paddingTop="7dp"
               android:paddingBottom="7dp"/>        
             </LinearLayout>
             <View 
                 android:id="@+id/first_layout"
                 android:layout_width="fill_parent"
                 android:layout_height="1dp"
                 android:background="#8B8B83"
                 android:layout_below="@id/name_layout"
                 android:layout_marginTop="3dp"/>
             <TextView 
                 android:id="@+id/reg_edu"
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="7dp"
                 android:text="@string/educate"
                 android:textColor="#FFD700"
                 android:textSize="13sp"
                 android:layout_below="@id/first_layout"/>
              <View 
                 android:id="@+id/second_layout"
                 android:layout_width="fill_parent"
                 android:layout_height="1dp"
                 android:background="#8B8B83"
                 android:layout_below="@id/reg_edu"
                 android:layout_marginTop="3dp"/>
              <LinearLayout 
                  android:id="@+id/s_layout"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_marginTop="3dp"
                  android:layout_below="@id/second_layout" >
              <TextView 
                  android:id="@+id/school"
                  android:text="@string/school_name"
                  android:textColor="#000000"
                  android:layout_marginLeft="3dp"
                  android:gravity="center_horizontal"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:background="#00ffffff"
                  android:layout_marginTop="7dp"
                  android:layout_marginBottom="7dp"  />
              <TextView 
                  android:id="@+id/njit"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:background="#00ffffff"
                  android:layout_marginLeft="23dp"
                  android:layout_marginTop="7dp"
                  android:text="@string/NJIT"
                  android:textColor="#000000"  />
              </LinearLayout>
              <View 
                  android:id="@+id/third_layout"
                  android:layout_width="fill_parent"
                  android:layout_height="1dp"
                  android:background="#8B8B83"
                  android:layout_below="@id/s_layout"
                  android:layout_marginTop="3dp"/>
              <LinearLayout 
                  android:id="@+id/y_layout"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_below="@id/third_layout"
                  android:orientation="horizontal"
                  android:layout_marginTop="3dp">
                  <TextView 
                      android:id="@+id/yuanxi"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:background="#00ffffff"
                      android:layout_marginLeft="3dp"
                      android:gravity="center_horizontal"
                      android:text="@string/yuanxi"
                      android:textColor="#000000"/>
                  <Spinner 
                      android:id="@+id/yuanxi_item"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="22dp"
                      android:entries="@array/yuanxiItems"
                      />
              </LinearLayout>
              <View 
                  android:id="@+id/forth_layout"
                  android:layout_width="fill_parent"
                  android:layout_height="1dp"
                  android:background="#8B8B83"
                  android:layout_below="@id/y_layout"
                  android:layout_marginTop="1dp"/>
              <LinearLayout 
                  android:id="@+id/n_layout"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_below="@id/forth_layout"
                  android:orientation="horizontal"
                  android:layout_marginTop="3dp">
                  <TextView 
                      android:id="@+id/nianfen"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:background="#00ffffff"
                      android:layout_marginLeft="3dp"
                      android:gravity="center_horizontal"
                      android:text="@string/nianfen"
                      android:textColor="#000000" 
                      />
                  <Spinner 
                      android:id="@+id/nianfen_item"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:entries="@array/nianfen_item"
                      />
              </LinearLayout>
              <View 
                  android:id="@+id/fifth_layout"
                  android:layout_width="fill_parent"
                  android:layout_height="1dp"
                  android:background="#8B8B83"
                  android:layout_below="@id/n_layout"
                  android:layout_marginTop="1dp"/>
              <LinearLayout 
                  android:id="@+id/xl_layout"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_below="@id/fifth_layout"
                  android:orientation="horizontal"
                  android:layout_marginTop="3dp"
                  >
                  <TextView 
                      android:id="@+id/xueli"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:background="#00ffffff"
                      android:layout_marginLeft="3dp"
                      android:gravity="center_horizontal"
                      android:text="@string/xueli"
                      android:textColor="#000000" 
                      />
                  <Spinner 
                      android:id="@+id/xueli_item"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:entries="@array/xueli_item"
                      android:layout_marginLeft="22dp"
                      />
                  
              </LinearLayout>
              <View 
                  android:id="@+id/sixth_layout"
                  android:layout_width="fill_parent"
                  android:layout_height="1dp"
                  android:background="#8B8B83"
                  android:layout_below="@id/xl_layout"
                  android:layout_marginTop="1dp"/>
              <LinearLayout 
                  android:id="@+id/radio_layout"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_below="@id/sixth_layout"
                  android:orientation="horizontal">
                  <TextView
                      android:id="@+id/zhiwei"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="3dp"
                      android:layout_marginTop="15dp"
                      android:background="#00ffffff"
                      android:text="@string/zhiwu"
                      android:textColor="#000000" />

                  <RadioGroup 
                      android:id="@+id/t_s"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">

                      <RadioButton
                          android:id="@+id/teacher"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="@string/laoshi" 
                          android:textColor="#000000"
                          android:layout_marginLeft="22dp"/>
                      <RadioButton 
                          android:id="@+id/student"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="15dp"
                          android:text="@string/xuesheng"
                          android:textColor="#000000"/>
                  </RadioGroup>
             </LinearLayout>
             <Button
                  android:id="@+id/register"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_below="@id/sixth_layout"
                  android:layout_marginLeft="5dp"
                  android:layout_marginRight="5dp"
                  android:layout_marginTop="60dp"
                  android:background="@drawable/shape"
                  android:enabled="false"
                  android:text="注册"
                  android:textColor="#FFFFFF"
                  android:textSize="25sp" />

              <RelativeLayout 
                  android:layout_width="fill_parent"
                  android:layout_height="35dp"
                  android:layout_alignParentBottom="true"
                  >
                  <View 
                      android:id="@+id/seventh_layout"
                      android:layout_width="fill_parent"
                      android:layout_height="1dp"
                      android:layout_marginTop="1dp"
                      android:background="#8B8B83" />
                  <TextView
 
                      android:id="@+id/first"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="70dp"
                      android:layout_marginTop="10dp"
                      android:text="已有账号，"
                      android:textColor="#8B8B83"
                      android:textSize="15sp" 
                      />

                  <Button 
                      android:id="@+id/fanhui"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="10dp"
                      android:text="点击此处去登录"
                      android:textColor="#FFD700"
                      android:textSize="15sp"
                      android:background="#00ffffff"
                      android:layout_toRightOf="@id/first"
                      android:layout_marginLeft="3dp"/>
              </RelativeLayout>           
</RelativeLayout>